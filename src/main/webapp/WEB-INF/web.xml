<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTrainServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.SearchTrainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.ScheduleByStationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyTicketServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.BuyTicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTrainServlet</servlet-name>
        <url-pattern>/search_train</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <url-pattern>/schedule_by_station</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyTicketServlet</servlet-name>
        <url-pattern>/buy_ticket</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>EmployeePageServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.EmployeePageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>EmployeePageServlet</servlet-name>
        <url-pattern>/employee_page</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddStationServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.AddStationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddStationServlet</servlet-name>
        <url-pattern>/add_station</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddTrainServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.AddTrainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddTrainServlet</servlet-name>
        <url-pattern>/add_train</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAllTrainsServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.ViewAllTrainsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAllTrainsServlet</servlet-name>
        <url-pattern>/view_all_trains</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ViewAllPassengerServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.ViewAllPassengerServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ViewAllPassengerServlet</servlet-name>
        <url-pattern>/view_all_passengers</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>IndexPageServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.IndexPageServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>IndexPageServlet</servlet-name>
        <url-pattern>/index</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddScheduleServlet</servlet-name>
        <servlet-class>com.railwaycompany.presentation.servlets.AddScheduleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddScheduleServlet</servlet-name>
        <url-pattern>/add_schedule</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.railwaycompany.presentation.servlets.MainServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>com.railwaycompany.presentation.filters.CharsetEncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.railwaycompany.presentation.filters.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>Private pages</param-name>
            <param-value>/buy_ticket;/buy_ticket.jsp;</param-value>
        </init-param>
        <init-param>
            <param-name>Employee pages</param-name>
            <param-value>
                /add_station;/add_station.jsp;/add_train;/add_train.jsp;/view_all_trains;/view_all_trains.jsp
            </param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/404.html</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/500.html</location>
    </error-page>
    <error-page>
        <error-code>400</error-code>
        <location>/400.html</location>
    </error-page>

</web-app>
