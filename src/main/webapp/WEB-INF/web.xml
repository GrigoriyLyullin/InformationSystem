<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_9" version="2.4" xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StationScheduleServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.StationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.ScheduleByStationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StationScheduleServlet</servlet-name>
        <url-pattern>/station</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <url-pattern>/station_schedule</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.railwaycompany.servlets.MainServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.railwaycompany.filters.AuthenticationFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/private/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/404_error.html</location>
    </error-page>

</web-app>
