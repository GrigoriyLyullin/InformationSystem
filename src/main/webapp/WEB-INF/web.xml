<?xml version="1.0" encoding="UTF-8"?>
<web-app>

    <display-name>Archetype Created Web Application</display-name>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTrainServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.SearchTrainServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.ScheduleByStationServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuyTicketServlet</servlet-name>
        <servlet-class>com.railwaycompany.servlets.BuyTicketServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTrainServlet</servlet-name>
        <url-pattern>/search_train</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScheduleByStationServlet</servlet-name>
        <url-pattern>/schedule_by_station</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuyTicketServlet</servlet-name>
        <url-pattern>/buy_ticket</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>com.railwaycompany.servlets.MainServletContextListener</listener-class>
    </listener>

    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.railwaycompany.filters.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>Private pages</param-name>
            <param-value>/buy_ticket;/buy_ticket.jsp;</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>CharsetEncodingFilter</filter-name>
        <filter-class>com.railwaycompany.filters.CharsetEncodingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>CharsetEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <error-page>
        <error-code>404</error-code>
        <location>/404_error.jsp</location>
    </error-page>

</web-app>
